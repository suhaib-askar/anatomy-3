use(require("atomy"))

-- traverse: include all sections
-- collect: define all tags
-- resolve: hyperlinking
-- render
Styles = module {}

def(strip-tags(x)):
  x gsub(r"<script.*?<\/script>", "")
    gsub(r"<.*?>", "")

def(sanitize(x)):
  strip-tags(x)
    gsub(r"\s+", "-")
    gsub(r"[^[:alnum:]_\-:.]", "")
    downcase
